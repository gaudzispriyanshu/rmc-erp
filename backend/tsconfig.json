{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": [
            "node",
            "express"
        ],
        // "typeRoots": [
        //     "./node_modules/@types"
        // ]
    },
    "include": [
        "src/**/*",
        "src/types/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}